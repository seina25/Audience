<div class="container-fluid">
  <div class="row mt-4">
    <div class="col-8 mx-auto">
      <%= flash[:notice] %>
      <%= flash[:error] %>
      <h2>会員様ログイン</h2>
      <%= form_with model: @member, url: session_path(resource_name), local: true do |f| %>

      <div class="form-group row">
        <div class="col-md-5">
          <%= f.label "メールアドレス", class: "col-form-label" %>
        </div>
        <div class="col-md-7">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-5">
          <%= f.label "パスワード", class: "col-form-label" %>
        </div>
        <div class="col-md-7">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end %>

      <div class="form-group-row">
        <div class="col-12 text-right">
          <%= f.submit "ログイン",class: "btn" %>
        </div>
      <% end %>

      <%= render "members/shared/links" %>
      </div>
    </div>
  </div>
</div>
