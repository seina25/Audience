<div class="container-fluid">
  <div class="col-5 mx-auto">
    <h2>お問い合わせフォーム</h2>
  </div>
  <div class="row m-5">
    <div class="col-2">
      <%= render 'members/members/mymenu' %>
    </div>
    <div class="col-6 mx-auto">
      <table>
        <tbody>
          <tr>
            <td class="text-center">お名前</td>
            <td style="white-space: pre-wrap;">
              <%= current_member.nickname %> 様
            </td>
          </tr>
          <tr>
            <td class="text-center">タイトル</td>
            <td style="white-space: pre-wrap;">
              <%= @contact.title %>
            </td>
          </tr>
          <tr>
            <td class="text-center">メッセージ</td>
            <td style="white-space: pre-wrap;">
              <%= @contact.message %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <div class="col-2">
          <%= form_with model: @contact, url: contacts_back_path, local: true, method: :post do |f| %>
            <%= f.hidden_field :title %>
            <%= f.hidden_field :message %>
            <%= f.submit '入力画面に戻る', class: 'btn btn-danger' %>
          <% end %>
        </div>

        <div class="col-2 mx-5">
          <%= form_with model: @contact, url: contacts_path, local: true, method: :post do |f| %>
            <%= f.hidden_field :title %>
            <%= f.hidden_field :message %>
            <%= f.submit '送信', class: 'btn btn-info'%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

