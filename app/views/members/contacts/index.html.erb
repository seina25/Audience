<div class="container-fluid">
  <div class="col-5 mx-auto">
    <h2>お問い合わせフォーム</h2>
  </div>
  <div class="row m-5">
    <div class="col-2">
      <h2>menu</h2>
      <%= attachment_image_tag current_member, :profile_image, format: 'png', fallback: "img/noimage1.png", size: "100x100"%>
    </div>
    <div class="col-10">
      <table class="table">
        <thead class="thead-light">
        <tr>
          <th style="width: 20%">送信日時</th>
          <th style="width: 30%">タイトル</th>
          <th style="width: 70%">お問い合わせ内容</th>
        </tr>
        </thead>
        <% @contacts.each do |contact| %>
        <tbody>
          <tr>
            <th>
              <%= contact.created_at.strftime("%Y年%-m月%-d日 %-H時%-M分") %>
            </th>
            <th>
              <%= contact.title %>
            </th>
            <th>
              <%= contact.message %>
            </th>
          </tr>
        </tbody>
        <% end %>
      </table>
      <%= link_to '新規投稿へ戻る', new_contact_path, class: 'btn btn-info' %>
    </div>
  </div>
</div>
