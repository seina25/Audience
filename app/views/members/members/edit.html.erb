<div class="container-fluid">
  <div class="col-5 mx-auto">
    <h2>プロフィール更新</h2>
  </div>
  <div class="row m-5">
    <div class="col-2">
      <%= render 'members/members/mymenu' %>
    </div>
    <div class="col-8 mx-auto">
      <%= form_with model: current_member, url:member_path, local: true, method: :put do |f| %>
      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label  "氏名（姓・名）", class: "col-from-label" %>
        </div>
        <div class="col-md-7">
          <div style="display:inline-flex">
            <div>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
            </div>
            <div class="mx-3">
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3 d-flex align-items-center">
          <%= f.label  "フリガナ（セイ・メイ）", class: "form-group-label" %>
        </div>
        <div class="col-md-7">
          <div style="display:inline-flex">
            <div>
              <%= f.text_field :kana_sei, autofocus: true, autocomplete: "kana_sei", class: "form-control" %>
            </div>
            <div class="mx-3">
              <%= f.text_field :kana_mei, autofocus: true, autocomplete: "kana_mei", class: "form-control" %>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3 d-flex align-items-center">
          <%= f.label "ニックネーム", class: "form-group-label" %>
        </div>
        <div class="col-md-7">
          <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3 d-flex align-items-center">
          <%= f.label "性別", class: "form-group-label" %>
        </div>
        <div class="col-md-7">
        <%= f.select :gender, Member.genders.keys, class: "form-control,required='required'" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3 d-flex align-items-center">
          <%= f.label "出身地", class: "form-group-label" %>
        </div>
        <div class="col-md-7">
          <%= f.text_field :prefecture, autofocus: true, autocomplete: "prefecture", class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3 d-flex align-items-center">
        <%= f.label "メールアドレス", class: "form-group-label" %>
        </div>
        <div class="col-md-7">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3 d-flex align-items-center">
          <%= f.label "プロフィール画像", class: "form-group-label" %>
          <%= attachment_image_tag current_member, :profile_image, format: 'png', fallback: "img/noimage1.png", size: "100x100"%>
        </div>
        <div class="col-md-7">
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>
      </div>

      <div class="form-group-row">
        <div class="col-10 text-right">
        <%= f.submit "更新する", class: "btn btn-info" %>
        </div>
      </div>

     <% end %>
    </div>
  </div>
</div>
