<canvas id="myLineChart_register_member"></canvas>
<script>
  $(function() {
    var ctx = document.getElementById("myLineChart_register_member");
    var myLineChart_register_member = new Chart(ctx, {
      type: 'line',
      data: {
        labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],
        datasets: [
          {
            label: '一週間の新規会員登録者数',
            data: [
              <%= Member.where(created_at: 6.day.ago.all_day).count %>,
              <%= Member.where(created_at: 5.day.ago.all_day).count %>,
              <%= Member.where(created_at: 4.day.ago.all_day).count %>,
              <%= Member.where(created_at: 3.day.ago.all_day).count %>,
              <%= Member.where(created_at: 2.day.ago.all_day).count %>,
              <%= Member.where(created_at: 1.day.ago.all_day).count %>,
              <%= Member.where(created_at: Time.zone.now.all_day).count %>
              ],
            borderColor: "rgb(255, 20, 147)",
            backgroundColor: "rgba(0,0,0,0)"
          }
        ],
      },
      options: {
        title: {
          display: true,
          text: '一週間の新規会員登録者数比較'
        },
        scales: {
          yAxes: [{
            ticks: {
              suggestedMax: 50,
              suggestedMin: 0,
              stepSize: 1,
              callback: function(value, index, values){
                return  value
              }
            }
          }]
        },
      }
    });
  });
</script>