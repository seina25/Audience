<canvas id="myLineChart_favorite"></canvas>
<script>
  $(document).on('turbolinks:load', function() {
    var ctx = document.getElementById("myLineChart_favorite");
    var myLineChart_favorite = new Chart(ctx, {
      type: 'line',
      data: {
        labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],
        datasets: [{
            label: '一週間のお気に入り登録数',
            data: [
              <%= Favorite.where(created_at: 6.day.ago.all_day).count %>,
              <%= Favorite.where(created_at: 5.day.ago.all_day).count %>,
              <%= Favorite.where(created_at: 4.day.ago.all_day).count %>,
              <%= Favorite.where(created_at: 3.day.ago.all_day).count %>,
              <%= Favorite.where(created_at: 2.day.ago.all_day).count %>,
              <%= Favorite.where(created_at: 1.day.ago.all_day).count %>,
              <%= Favorite.where(created_at: Time.zone.now.all_day).count %>
              ],
            borderColor: "rgb(255, 0, 0)",
            backgroundColor: "rgba(0,0,0,0)"
          }
        ],
      },
      options: {
        title: {
          display: true,
          text: '一週間のお気に入り登録の比較'
        },
        scales: {
          yAxes: [{
            ticks: {
              suggestedMax: 50,
              suggestedMin: 0,
              stepSize: 1,
              callback: function(value, index, values){
                return  value
              }
            }
          }]
        },
      }
    });
  });
</script>