<canvas id="myLineChart_review"></canvas>
<script>
  $(document).on('turbolinks:load', function() {
    var ctx = document.getElementById("myLineChart_review");
    var myLineChart_review = new Chart(ctx, {
      type: 'line',
      data: {
        labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],
        datasets: [
          {
            label: '一週間のレビュー投稿数',
            data: [
              <%= Review.where(created_at: 6.day.ago.all_day).count %>,
              <%= Review.where(created_at: 5.day.ago.all_day).count %>,
              <%= Review.where(created_at: 4.day.ago.all_day).count %>,
              <%= Review.where(created_at: 3.day.ago.all_day).count %>,
              <%= Review.where(created_at: 2.day.ago.all_day).count %>,
              <%= Review.where(created_at: 1.day.ago.all_day).count %>,
              <%= Review.where(created_at: Time.zone.now.all_day).count %>
              ],
            borderColor: "rgba(0,0,255,1)",
            backgroundColor: "rgba(0,0,0,0)"
          }
        ],
      },
      options: {
        title: {
          display: true,
          text: '一週間のレビュー投稿数の比較'
        },
        scales: {
          yAxes: [{
            ticks: {
              suggestedMax: 30,
              suggestedMin: 0,
              stepSize: 1,
              callback: function(value, index, values){
                return  value
              }
            }
          }]
        },
      }
    });
  });
</script>