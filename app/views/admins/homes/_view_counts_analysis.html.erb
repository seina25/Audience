<canvas id="myLineChart_viewcounts"></canvas>
<script>
  $(function() {
    var ctx = document.getElementById("myLineChart_viewcounts");
    var myLineChart_viewcounts = new Chart(ctx, {
      type: 'line',
      data: {
        labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],
        datasets: [
          {
            label: '一週間の番組詳細画面の閲覧数',
            data: [
              <%= ViewCount.where(created_at: 6.day.ago.all_day).count %>,
              <%= ViewCount.where(created_at: 5.day.ago.all_day).count %>,
              <%= ViewCount.where(created_at: 4.day.ago.all_day).count %>,
              <%= ViewCount.where(created_at: 3.day.ago.all_day).count %>,
              <%= ViewCount.where(created_at: 2.day.ago.all_day).count %>,
              <%= ViewCount.where(created_at: 1.day.ago.all_day).count %>,
              <%= ViewCount.where(created_at: Time.zone.now.all_day).count %>
              ],
            borderColor: "rgb(50, 205, 50)",
            backgroundColor: "rgba(0,0,0,0)"
          }
        ],
      },
      options: {
        title: {
          display: true,
          text: '一週間の番組詳細画面の閲覧数比較'
        },
        scales: {
          yAxes: [{
            ticks: {
              suggestedMax: 50,
              suggestedMin: 0,
              stepSize: 1,
              callback: function(value, index, values){
                return  value
              }
            }
          }]
        },
      }
    });
  });
</script>