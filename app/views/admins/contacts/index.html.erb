<div class="container-fluid">
  <div class="row m-4">
    <div class="col-2">
      <%= render partial: 'admins/homes/admin_menu' %>
    </div>
    <div class="col-8 mx-auto">
      <h2>お問合せ内容一覧</h2>
      <table class="table mt-3">
        <thead>
          <tr>
            <th>受信日</th>
            <th>会員ID</th>
            <th>会員名</th>
            <th>タイトル</th>
            <th>お問合せ内容</th>
          </tr>
        </thead>
        <tbody>
            <% @contacts.includes([:member]).each do |contact| %>
              <tr>
                <th>
                  <%= contact.created_at.strftime("%Y年%m月%d日 ") %>
                </th>
                <th>
                  <%= contact.member.id %>
                </th>
                <th>
                  <%= link_to admins_member_path(contact.member.id) do %>
                    <%= contact.member.first_name + contact.member.last_name %>(<%= contact.member.nickname %>) 様
                  <% end %>

                </th>
                <th>
                  <%= contact.title %>
                </th>
                <th>
                  <%= contact.message %>
                </th>
              </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>